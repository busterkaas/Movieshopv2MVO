<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Little Movie Shop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        header{
            background-color:white;
        }
        body {
            background: rgb(40,40,40);
            color: white;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="margin-top:5px; margin-bottom:5px;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                <img src="~/Content/Images/Drawing.png" style="height:45px; margin-right:28px; margin-top:2px;"/>
                    </a>
                @*@Html.ActionLink("Movie shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">

                    <li>@Html.ActionLink("Movies", "Index", "Movies")</li>
                    <li>@Html.ActionLink("Genres", "Index", "Genres")</li>
                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>
                        @Html.ActionLink("Shopping Cart" + Html.Action("NoOfItems", "ShoppingCart"),
                       "Index", "ShoppingCart")
                </li>

                    @*<li><a href="/ShoppingCart/Index"><span class="glyphicon glyphicon-shopping-cart">&nbsp;Cart</span></a></li>*@
                </ul>
            </div>
        </div>
    </div>
    <br />


    <div class="container body-content" style="border-left: 2px inset #5C9DFF;">
        @RenderBody()
        
        <footer style="clear:both">
            <br />
            <br />
            <hr />
            <p>&copy; @DateTime.Now.Year - ME</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
