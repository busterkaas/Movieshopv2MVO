@model MovieShopDAL.BE.Order

@{
    ViewBag.Title = "Details";
}

<h2>Order Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Customer:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.FirstName)
        </dd>

        @*<dt>
            Movie:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>*@

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>
</div>
<p class="col-md-offset-1">
    <button class="btn btn-warning" style="margin-right:5px" onclick="window.location.href = '/Orders/Edit/@Model.OrderId'">Edit</button> |
    <button class="btn btn-primary" style="margin-right:5px" onclick="window.location.href = '/Orders/Index'">Cancel</button>
</p>
