@model MovieShopDAL.BE.Genre

@{
    ViewBag.Title = "Details";
}

<h2>Genre Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    <p class="col-md-offset-1">
        <button class="btn btn-warning" style="margin-right:5px" onclick="window.location.href = '/Genres/Edit/@Model.GenreId'">Edit</button> |
        <button class="btn btn-primary" style="margin-right:5px" onclick="window.location.href = '/Genres/Index'">Cancel</button>
    </p>
</div>