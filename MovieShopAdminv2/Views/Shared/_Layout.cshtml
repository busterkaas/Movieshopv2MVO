<!DOCTYPE html>
<title>@ViewBag.Title - Administration</title>
<html>
<header class="navbar navbar-bright navbar-fixed-top" role="banner">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

        </div>
        <nav class="collapse navbar-collapse" role="navigation">
            <ul class="nav navbar-left navbar-nav">
                <li>
                    <a href="/Home/Index">
                        <i class="glyphicon glyphicon-home"></i>
                    </a>
                </li>
                <li>
                    <a href="/Movies/Index">Movies</a>
                </li>
                <li>
                    <a href="/Genres/Index">Genres</a>
                </li>
                <li>
                    <a href="/Customers/Index">Customers</a>
                </li>
                <li>
                    <a href="/Orders/Index">Orders </a>
                </li>
            </ul>
            <ul class="nav navbar-right navbar-nav">

                <li>
                    <a>
                        Administration
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</header>
<body>
    <div class="container panel-body">
        @RenderBody()
    </div>

    <div>
        <footer class="container panel-body" style="border-color:black; border-top:groove">
            <p class="right">&copy; @DateTime.Now.Year - Movie Shop</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/NavBar")
    @RenderSection("scripts", required: false)

</body>
</html>




